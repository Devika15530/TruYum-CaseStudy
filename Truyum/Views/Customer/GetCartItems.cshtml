@model IEnumerable<Truyum.Models.Cart>

@{
    ViewData["Title"] = "GetCartItems";
}

<h1>GetCartItems</h1>


<table class="table">
    <thead>
        <tr>

            <th>
                @Html.DisplayNameFor(model => model.ItemName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Price)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Category)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.FreeDelivery)
            </th>

            <th>
                @Html.DisplayNameFor(model => model.Active)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Date)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ItemId)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @{ int Total = 0; }
        @foreach (var item in Model)
        {
            Total += 100+Convert.ToInt32(item.Price);

        <tr>

            <td>
                @Html.DisplayFor(modelItem => item.ItemName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Price)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Category)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.FreeDelivery)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Date)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Active)
            </td>

            <td>

                @Html.ActionLink("Delete", "DeleteCartItem", new { id = item.CartId })
            </td>
        </tr>
        }
    </tbody>
</table>
<p class="total">Total:@Total</p>
